#include <avr/io.h>
#include <avr/interrupt.h>
/*XMEGA PINS
ADC6-->PA6  = pullup
ADC4-->PA4 = signal
trigger on port A
*/

volatile uint8_t input_changed=0;

ISR( PORTA_INT0_vect ){

	input_changed=1;

  }


int main(void)
{	
	PORTA_OUT=0x10
	cli();                //clear interrupts

	PORTA.PIN4CTRL = PORT_ISC_FALLING_gc;
	PORTA.INT0MASK = PIN4_bm;
	PORTA.INTCTRL = PORT_INT0LVL_LO_gc;
	PMIC.CTRL |= PMIC_LOLVLEN_bm;
	sei();

while(1){
		
		
}
}
